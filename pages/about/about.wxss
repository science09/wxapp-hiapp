.container {
    display: flex;
    flex-direction: column;
}
.logo-head {  
    width: 100%;
    height: 270rpx;
    margin-top: 90rpx;
    text-align: center;
}
.logo {
    padding: 20rpx;
    height: 180rpx;
    width: 180rpx;
    background: #FFFFFF;
    border: 1px solid #DDDDDD;
    border-radius: 10rpx;
}
.logo-text {
    font-size: 20px;
    color: #666666;
    text-align: center;
 }
 .detail {
     width: 100%;
     height: 500rpx;
     margin-top: 100rpx;
     text-align: center;
 }
 .text-line {
     width: 100%;
     padding: 10rpx;
 }
 .footer {
     color: #888888;
     font-size: 0.8rem;
     flex: 1;
     text-align: center;
 }